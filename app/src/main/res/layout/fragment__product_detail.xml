        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Apple Macbook Pro MD101LL/A 13.3&quot; Intel Core i5 2.5GHz 4GB Mac "
            android:id="@+id/product_detail_tittle"
            android:textColor="#000"
            android:textStyle="bold|normal"
            android:textSize="10dp"
            android:textIsSelectable="false"
            android:layout_below="@+id/product_detail_image"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_detail_tittle"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1,099.00"
                android:id="@+id/product_detail_oldprice"
                android:textColor="#959595"
                android:textStyle="bold"
                android:textSize="12dp"
                android:enabled="false"
                android:autoText="false"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$900.00"
                android:id="@+id/product_detail_newprice"
                android:textColor="#ff3f3f"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_alignTop="@+id/product_detail_oldprice"
                android:layout_toRightOf="@+id/product_detail_oldprice"
                android:layout_toEndOf="@+id/product_detail_oldprice"
                android:layout_marginStart="10dp" />

        </RelativeLayout>



        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
