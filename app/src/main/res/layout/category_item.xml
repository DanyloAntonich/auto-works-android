<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:id="@+id/category_layout_item"
    android:layout_marginBottom="15dp"
    android:layout_marginStart="10dp"
    android:background="@drawable/category_list_boder">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_marginStart="10dp"
        android:id="@+id/category_item_image"
        android:src="@drawable/no_product_image"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apple Macbook Pro MD101LL/A 13.3&quot; Intel Core i5 2.5GHz 4GB Mac "
        android:id="@+id/item_tittle"
        android:layout_alignTop="@+id/category_item_image"
        android:layout_toEndOf="@+id/category_item_image"
        android:textColor="#000"
        android:textStyle="bold|normal"
        android:textSize="10dp"
        android:textIsSelectable="false"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2.4 GHz Dual-Core Intel Core i5 Processor, 4GB 1333MHz DDR3 SDRAM, 500 GB Hard Drive, 8x DVD/CD SuperDrive, 13.3-Inch LED-backlit Display, 1280-by-800 Resolution, Intel HD Graphics 3000
    Mac OS X v10.7 Lion, 7 Hour Battery Life"
        android:id="@+id/item_subtittle"

        android:layout_toEndOf="@+id/category_item_image"
        android:layout_below="@+id/item_tittle"
        android:textColor="#959595"
        android:textSize="9dp"
        android:textIsSelectable="false"
        android:layout_marginStart="5dp" />


</RelativeLayout>