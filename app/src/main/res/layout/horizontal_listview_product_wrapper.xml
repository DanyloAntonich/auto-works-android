<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:background="@color/home_product_background"
    android:id="@+id/fragment_home_product"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/block_separtor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="15dp"
        android:clickable="false"
        android:focusable="false"
        android:longClickable="false"
        android:src="@drawable/block_separtor" />

    <TextView
        android:id="@+id/block_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="#f26522"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="HOT DEALS"/>

    <ImageView
        android:id="@+id/block_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:focusable="false"
        android:longClickable="false"
        android:src="@drawable/block_arrow" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.meetme.android.horizontallistview.HorizontalListView
            android:id="@+id/block_products"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:paddingTop="10dp"
            android:divider="#fff"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            widget:dividerWidth="10dp"
            />
    </FrameLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listSpecialProductDots"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp">

    </LinearLayout>

</LinearLayout>