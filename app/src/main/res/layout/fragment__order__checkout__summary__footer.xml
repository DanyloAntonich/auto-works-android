<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/order_summary_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f3f4"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/item_sum_layout"
            android:layout_width="fill_parent"
            android:layout_height="20dp"

            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/total_quantity"
                android:layout_marginStart="130dp"
                android:text="Total:"
                android:textColor="#0072bc"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@+id/textView7"
                android:layout_toRightOf="@+id/textView7"
                android:text="2"
                android:textColor="#fe0101"
                android:textSize="10dp"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/total_quantity"
                android:layout_toRightOf="@+id/total_quantity"
                android:password="false"
                android:text="$99999.00"
                android:textColor="#fe0101"
                android:textSize="10dp"
                android:textStyle="bold" />

            <!--<TextView-->
                <!--android:id="@+id/total_ship"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginStart="10dp"-->
                <!--android:layout_marginStart="14dp"-->
                <!--android:layout_toEndOf="@+id/total_price"-->
                <!--android:layout_toRightOf="@+id/total_price"-->
                <!--android:password="false"-->
                <!--android:singleLine="true"-->
                <!--android:text="$30"-->
                <!--android:textColor="#0072bc"-->
                <!--android:textSize="10dp"-->
                <!--android:textStyle="bold" />-->

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/order_history_layout_summary"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#f9bcc3">

            <TextView
                android:id="@+id/textViewTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/total_price_plus_total_ship"
                android:layout_marginStart="99dp"
                android:text="Order Total:"
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/total_price_plus_total_ship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="60dp"
                android:layout_toEndOf="@+id/textViewTotal"
                android:layout_toRightOf="@+id/textViewTotal"
                android:text="$99999.00"
                android:textColor="#fe0101"
                android:textSize="14dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>