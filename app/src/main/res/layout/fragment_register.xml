            <LinearLayout
                android:layout_weight="1.03"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <EditText
                    android:id="@+id/customer_country_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/customer_city"
                    android:inputType="number"
                    android:layout_weight="3"
                    android:background="#ffffff"
                    android:ems="10"
                    android:hint="Country code"
                    android:paddingLeft="20dp"
                    android:textColor="#000000"
                    android:textColorHint="@color/hint_foreground_material_light"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/customer_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/customer_country_code"
                    android:layout_marginStart="10dp"
                    android:layout_weight="2"
                    android:background="#ffffff"
                    android:ems="10"
                    android:hint="Mobile"
                    android:paddingLeft="20dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textColorHint="@color/hint_foreground_material_light"
                    android:textSize="12dp" />

            </LinearLayout>




            <TextView
                android:id="@+id/register_error"

                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/customer_mobile"
                android:layout_marginTop="5dp"
                android:layout_weight="1.05"
                android:ems="10"
                android:gravity="center|center_horizontal"
                android:text=""
                android:textColor="@color/error_text"
                android:textSize="12dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registration_layout_fields"
            android:layout_weight="2">


            <RelativeLayout
                android:id="@+id/registration_register"
                android:layout_width="fill_parent"
                android:layout_height="32dp"


                android:layout_marginBottom="10dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="0dp"
                android:background="#ed3a24"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/registration_register_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Register"
                    android:textColor="#fff"
                    android:textSize="24dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/socialLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/registration_register"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_alignParentTop="true"
                    facebook:layout_heightPercent="50%"
                    facebook:layout_widthPercent="100%"
                    android:scaleType="fitXY"
                    android:src="@drawable/registration_social" />

                <RelativeLayout
                    android:id="@+id/registration_login_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/registration_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_centerHorizontal="true"
                        android:text="LOGIN"
                        android:textColor="#d53c38"
                        android:textSize="10dp" />

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/registration_login"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/registration_arrow_down" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/connect_facebook_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/facebook"

                        />

                    <ImageView
                        android:id="@+id/connect_twitter_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:layout_weight="1"

                        android:scaleType="centerInside"
                        android:src="@drawable/twitter"
                        android:text="" />


                    <ImageView
                        android:id="@+id/connect_googleplus_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/googleplus" />

                    <ImageView
                        android:id="@+id/connect_instagram_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:src="@drawable/instagram"

                        />

                </LinearLayout>


                <com.twitter.sdk.android.core.identity.TwitterLoginButton
                    android:id="@+id/connect_twitter"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="15dp"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:text=""
                    android:visibility="gone" />

                <com.google.android.gms.common.SignInButton
                    android:id="@+id/connect_googleplus"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="15dp"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:visibility="gone" />

                <com.facebook.widget.LoginButton
                    android:id="@+id/connect_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:visibility="gone"
                    facebook:login_text=""
                    facebook:logout_text="" />


            </android.support.percent.PercentRelativeLayout>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>