<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/registration_banner_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/registration_banner" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/registration_banner_layout"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/registration_layout_fields"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_conner"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/customer_firstname"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:textColorHint="@color/hint_foreground_material_light"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/customer_lastname"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/customer_firstname"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:textColorHint="@color/hint_foreground_material_light"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/customer_email"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/customer_lastname"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:textColorHint="@color/hint_foreground_material_light"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/customer_password"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/customer_email"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ems="10"
                android:fontFamily=""
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:textColorHint="@color/hint_foreground_material_light"
                android:textSize="12dp" />
            <EditText
                android:id="@+id/customer_country"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/customer_password"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ems="10"
                android:hint="Country"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:textColorHint="@color/hint_foreground_material_light"
                android:textSize="12dp" />
            <EditText
                android:id="@+id/customer_city"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/customer_country"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ems="10"
                android:hint="City"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:textColorHint="@color/hint_foreground_material_light"
                android:textSize="12dp" />
