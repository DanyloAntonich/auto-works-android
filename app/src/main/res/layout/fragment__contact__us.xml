<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contact_layout_banner"
        android:layout_marginBottom="10dp">

        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:id="@+id/imageView4"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:src="@drawable/forgot_bannerbackground" />-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:src="@drawable/forgot_logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cart_back"
            android:src="@drawable/forgot_menu"
            android:layout_margin="20dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cart_menu"
            android:src="@drawable/cart_menu"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#ed3a24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_us"
                android:id="@+id/contact_subbanner_text"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="24dp" />
        </RelativeLayout>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/contact_layout_banner"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_layout_banner"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt . "
            android:id="@+id/contact_text_tittle"
            android:textColor="#f000"
            android:textSize="12dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/contact_tittle"
            android:layout_below="@+id/contact_text_tittle"
            android:background="@drawable/contact_edittext_background_style"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:hint="@string/subject"
            android:textColor="#000"
            android:layout_marginBottom="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:inputType="textMultiLine"
            android:lines="4"
            android:ems="10"
            android:id="@+id/contact_body"
            android:layout_below="@+id/contact_tittle"
            android:layout_alignParentLeft="true"
            android:background="@drawable/contact_edittext_background_style"
            android:hint="@string/your_message"
            android:paddingLeft="20dp"
            android:textColor="#000"
            android:layout_marginBottom="5dp" />


        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/contact_send"
            android:layout_below="@+id/contact_body"
            android:layout_marginBottom="10dp"
            android:background="#ed3a24"
            android:text="@string/send"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="21dp"
            />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/send"-->
                <!--android:id="@+id/contact_send_text"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:textColor="#fff"-->
                <!--android:textStyle="bold"-->
                <!--android:textSize="24dp" />-->
        <!--</Button>-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact_split"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/rl_contact_chat"
            android:src="@drawable/contact_split"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/rl_contact_chat"
            android:layout_below="@+id/contact_send"
            android:layout_marginBottom="10dp"
            android:background="#ed3a24"
            android:text="@string/Chat"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="21dp"
            />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/Chat"-->
                <!--android:id="@+id/tv_contact_chat"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:textColor="#fff"-->
                <!--android:textStyle="bold"-->
                <!--android:textSize="24dp" />-->
        <!--</RelativeLayout>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt . "
            android:id="@+id/contact_textview_tittle2"
            android:textColor="#f000"
            android:textSize="12dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/contact_split"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_textview_tittle2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/contact_layout_phone"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageView2"
                android:src="@drawable/contact_phone"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" +44 6745 734-472"
                android:id="@+id/textView3"
                android:layout_toRightOf="@+id/imageView2"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_layout_phone"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/contact_layout_address"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/imageView3"
                android:src="@drawable/contact_address"
                android:layout_marginRight="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="192 Stila Ave, Tifu,Rubo"
                android:id="@+id/textView4"
                android:layout_toRightOf="@+id/imageView3"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_layout_address"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/contact_layout_mail" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView6"
                android:src="@drawable/contact_mail"
                android:layout_marginRight="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="contact@ceoteam.vn"
                android:id="@+id/textView5"
                android:layout_toRightOf="@+id/imageView6"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="14dp" />
        </RelativeLayout>

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>