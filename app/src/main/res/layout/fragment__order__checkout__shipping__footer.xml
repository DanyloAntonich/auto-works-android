<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/order_ship_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f2f3f4">



        <RelativeLayout
            android:id="@+id/order_ship_main_bottom_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:id="@+id/order_history_bottom_banner_layout"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/order_ship_iconmain" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/order_ship_arrow" />

                <ImageView
                    android:id="@+id/select_payment_method_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/order_ship_iconsub" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/order_ship_split2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/is_new_address_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_history_bottom_banner_layout">

                <CheckBox
                    android:id="@+id/is_new_address"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:text="@string/check_box_new_address"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_ship_firstname_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/is_new_address_wrapper"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">



                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:text="First name *"
                    android:textColor="#959595" />

                <EditText
                    android:id="@+id/customer_firstname"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/textView6"
                    android:background="@drawable/edittext_background_style" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_ship_lastname_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_ship_firstname_layout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:text="Last name *"
                    android:textColor="#959595" />

                <EditText
                    android:id="@+id/customer_lastname"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/textView7"
                    android:background="@drawable/edittext_background_style" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_ship_phone_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_ship_lastname_layout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:text="Phone number *"
                    android:textColor="#959595" />

                <EditText
                    android:id="@+id/customer_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/textView8"
                    android:background="@drawable/edittext_background_style" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_ship_address_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_ship_phone_layout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:text="Address *"
                    android:textColor="#959595" />

                <EditText
                    android:id="@+id/customer_address"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/textView9"
                    android:background="@drawable/edittext_background_style" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_ship_country_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_ship_address_layout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:text="Country *"
                    android:textColor="#959595" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/textView13"
                    android:background="@drawable/edittext_background_style"
                    >


                    <Spinner
                        android:id="@+id/customer_country"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:ems="10"
                        android:paddingLeft="20dp"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_alignEnd="@+id/customer_country"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/registration_check" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_ship_city_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_ship_country_layout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:text="City *"
                    android:textColor="#959595" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/textView10"
                    android:background="@drawable/edittext_background_style"
                    >
                    <Spinner
                        android:id="@+id/customer_city"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"

                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:ems="10"
                        android:hint="City"
                        android:paddingLeft="20dp"
                        android:textColor="#000000"
                        android:textColorHint="@color/hint_foreground_material_light"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_alignEnd="@+id/customer_city"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/registration_check" />
                </RelativeLayout>
            </RelativeLayout>

