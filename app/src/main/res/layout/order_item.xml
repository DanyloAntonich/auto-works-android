<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/order_ship_layout_tittle"
        android:id="@+id/order_layout"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1"
            android:id="@+id/order_id"
            android:textSize="10dp"
            android:textIsSelectable="false"
            android:singleLine="false"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday, 06/05/2014"
            android:id="@+id/order_date"
            android:textSize="10dp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/order_id"
            android:layout_toEndOf="@+id/order_id"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approved"
            android:id="@+id/order_status"
            android:textSize="10dp"
            android:textColor="#8dc63f"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/order_date"
            android:layout_toEndOf="@+id/order_date"
            android:layout_marginStart="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1200.00"
            android:id="@+id/order_total"
            android:textSize="10dp"
            android:textColor="#fe0101"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/order_view"
            android:layout_marginEnd="25dp"
            android:password="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_view"
            android:src="@drawable/history_eye"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_alignParentBottom="true"
            android:src="@drawable/history_split" />

    </RelativeLayout>

</LinearLayout>