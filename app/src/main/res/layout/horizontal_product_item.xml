<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_block"
    android:layout_width="180dp"
    android:layout_height="260dp"
    android:orientation="vertical"
    android:background="@drawable/product_item_border">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:focusable="false"
        android:longClickable="false"
        android:src="@drawable/no_product_image" />

    <ImageView
        android:id="@+id/product_separator"
        android:layout_width="160dp"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/product_separator" />


    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/product_name"
        android:gravity="center"
        android:textColor="#ff000000"
        android:textSize="13dp"
        android:text="This is a sample product name"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_gravity="left"
        android:id="@+id/salePercentage"
        android:textSize="12dp"
        android:gravity="center"
        android:textColor="#ccc"
        android:layout_marginTop="0dp"
        android:layout_marginStart="10dp"
        android:text="SALE 18%"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_gravity="right"
        android:id="@+id/product_price_special"
        android:gravity="right"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="10dp"
        android:textColor="#ed3a24"
        android:textSize="12dp"
        android:text="$889.99"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_gravity="right"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/product_price"
        android:gravity="right"
        android:textColor="#ccc"
        android:textSize="12dp"
        android:text="$1,099.00"/>

</LinearLayout>
