            <!--android:layout_margin="20dp" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Password Assistance"
            android:id="@+id/textView"
            android:layout_marginTop="15dp"
            android:textColor="#ed3a24"
            android:textStyle="bold|normal"
            android:textSize="18dp"
            android:layout_marginStart="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@drawable/forgot_downicon"
            android:layout_alignBottom="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:background="@drawable/rounded_conner_light"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Enter your email and we will send you a new password."
                android:id="@+id/textView2"
                android:textColor="#898989"
                android:textSize="12dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/customer_email"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:hint="Your email"
                android:paddingLeft="20dp"
                android:textColor="#000000" />



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/customer_email"
                android:layout_marginTop="20dp"
                android:background="#ed3a24"
                android:id="@+id/forgot_send">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:id="@+id/forgot_send_text"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="24dp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>